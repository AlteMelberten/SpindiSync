{
  /* obsidian muss zur PfadVariable hinzugefügt werden, dann
 obsidian in konsole starten mit: obsdian --remote-debugging-port=9229 */
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Obsidian",
      "port": 9229, // Standardport für Node.js Debugging
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": null,
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
